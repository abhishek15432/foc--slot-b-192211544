#include <stdio.h>

int main() {
    int n, i, num, sum = 0;
    float avg;

    printf("Enter the number of integers: ");
    scanf("%d", &n);

    for(i=0; i<n; ++i) {
        printf("Enter an integer: ");
        scanf("%d", &num);
        sum += num;
    }

    avg = (float)sum / n;
    printf("Sum = %d\n", sum);
    printf("Average = %.2f\n", avg);
  return 0;
}
